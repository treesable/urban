generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model WaitlistEntry {
  id               String    @id @default(cuid())
  email            String    @unique
  name             String
  role             String
  organization     String?
  verificationToken String   @unique
  status           String    @default("PENDING") // PENDING, VERIFIED, REJECTED
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
} 